<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/avatar_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/item_contact_avatar"
            android:layout_width="@dimen/avatar_size_usual"
            android:layout_height="@dimen/avatar_size_usual"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/empty_avatar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/voice_click"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:textAllCaps="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollbars="none"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            tools:text="Fenrir for VK" />

        <TextView
            android:id="@+id/item_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollbars="none"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textSize="@dimen/font_size_subtitle"
            tools:text="Сообщество" />

        <TextView
            android:id="@+id/item_people_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollbars="none"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textSize="@dimen/font_size_subtitle"
            tools:text="31 подписок" />

    </LinearLayout>

</LinearLayout>
