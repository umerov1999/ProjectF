    <LinearLayout
        android:id="@+id/comments_video_attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/comments_stickers_attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/comments_docs_attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
