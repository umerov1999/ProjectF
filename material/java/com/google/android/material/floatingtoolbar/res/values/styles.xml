<resources>
  <!-- Base style for Floating Toolbar. -->
  <style name="Base.Widget.Material3.FloatingToolbar" parent="">
    <item name="enforceMaterialTheme">true</item>
    <item name="android:minHeight">@dimen/m3_comp_toolbar_floating_horizontal_container_height</item>
    <item name="android:minWidth">@dimen/m3_comp_toolbar_floating_vertical_container_width</item>
    <item name="backgroundTint">@macro/m3_comp_toolbar_standard_container_color</item>
    <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.Toolbar.Floating.Container.Shape</item>
    <item name="marginLeftSystemWindowInsets">true</item>
    <item name="marginTopSystemWindowInsets">false</item>
    <item name="marginRightSystemWindowInsets">true</item>
    <item name="marginBottomSystemWindowInsets">true</item>
    <item name="elevation">@dimen/m3_comp_toolbar_floating_container_elevation</item>
  </style>

  <!-- Style for Floating Toolbar. -->
  <style name="Widget.Material3.FloatingToolbar" parent="Base.Widget.Material3.FloatingToolbar">
    <item name="android:paddingStart">@dimen/m3_comp_toolbar_floating_container_leading_space</item>
    <item name="android:paddingEnd">@dimen/m3_comp_toolbar_floating_container_trailing_space</item>
    <item name="android:paddingTop">@dimen/m3_comp_toolbar_floating_container_leading_space</item>
    <item name="android:paddingBottom">@dimen/m3_comp_toolbar_floating_container_trailing_space</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.FloatingToolbar</item>
  </style>

  <!-- Style for Vibrant color variation of the Floating Toolbar. -->
  <style name="Widget.Material3.FloatingToolbar.Vibrant">
    <item name="backgroundTint">@macro/m3_comp_toolbar_vibrant_vibrant_container_color</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.FloatingToolbar.Vibrant</item>
  </style>

  <!-- Style for icon buttons within Standard Floating Toolbars. -->
  <style name="Widget.Material3.FloatingToolbar.IconButton" parent="Widget.Material3Expressive.Button.IconButton.Tonal">
    <item name="backgroundTint">@color/m3_standard_toolbar_icon_button_container_color_selector</item>
    <item name="android:textColor">@color/m3_standard_toolbar_button_text_color_selector</item>
    <item name="iconTint">@color/m3_standard_toolbar_icon_button_icon_color_selector</item>
    <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.Button.Small.Container.Shape.Round</item>
    <item name="rippleColor">@color/m3_standard_toolbar_icon_button_ripple_color_selector</item>
  </style>

  <!-- Style for buttons within Standard Floating Toolbars. -->
  <style name="Widget.Material3.FloatingToolbar.Button" parent="Widget.Material3Expressive.Button">
    <item name="backgroundTint">@color/m3_standard_toolbar_icon_button_container_color_selector</item>
    <item name="android:textColor">@color/m3_standard_toolbar_button_text_color_selector</item>
    <item name="iconTint">@color/m3_standard_toolbar_icon_button_icon_color_selector</item>
    <item name="rippleColor">@color/m3_standard_toolbar_icon_button_ripple_color_selector</item>
  </style>

  <!-- Style for borderless text buttons within Standard Floating Toolbars. -->
  <style name="Widget.Material3.FloatingToolbar.TextButton" parent="Widget.Material3Expressive.Button.TextButton">
    <item name="backgroundTint">@color/m3_standard_toolbar_icon_button_container_color_selector</item>
    <item name="android:textColor">@color/m3_standard_toolbar_button_text_color_selector</item>
    <item name="iconTint">@color/m3_standard_toolbar_icon_button_icon_color_selector</item>
    <item name="rippleColor">@color/m3_standard_toolbar_icon_button_ripple_color_selector</item>
  </style>

  <!-- Style for icon buttons within Vibrant Floating Toolbars. -->
  <style name="Widget.Material3.FloatingToolbar.IconButton.Vibrant">
    <item name="android:textColor">@color/m3_vibrant_toolbar_button_text_color_selector</item>
    <item name="backgroundTint">@color/m3_vibrant_toolbar_icon_button_container_color_selector</item>
    <item name="iconTint">@color/m3_vibrant_toolbar_icon_button_icon_color_selector</item>
    <item name="rippleColor">@color/m3_vibrant_toolbar_icon_button_ripple_color_selector</item>
  </style>

  <!-- Style for buttons within Vibrant Floating Toolbars. -->
  <style name="Widget.Material3.FloatingToolbar.Button.Vibrant">
    <item name="android:textColor">@color/m3_vibrant_toolbar_button_text_color_selector</item>
    <item name="backgroundTint">@color/m3_vibrant_toolbar_icon_button_container_color_selector</item>
    <item name="iconTint">@color/m3_vibrant_toolbar_icon_button_icon_color_selector</item>
    <item name="rippleColor">@color/m3_vibrant_toolbar_icon_button_ripple_color_selector</item>
  </style>

  <!-- Style for text buttons within Vibrant Floating Toolbars. -->
  <style name="Widget.Material3.FloatingToolbar.TextButton.Vibrant">
    <item name="android:textColor">@color/m3_vibrant_toolbar_button_text_color_selector</item>
    <item name="backgroundTint">@color/m3_vibrant_toolbar_icon_button_container_color_selector</item>
    <item name="iconTint">@color/m3_vibrant_toolbar_icon_button_icon_color_selector</item>
    <item name="rippleColor">@color/m3_vibrant_toolbar_icon_button_ripple_color_selector</item>
  </style>

  <!-- Theme overlay to be set on Floating Toolbars. -->
  <style name="ThemeOverlay.Material3.FloatingToolbar" parent="">
    <item name="materialIconButtonStyle">@style/Widget.Material3.FloatingToolbar.IconButton</item>
    <item name="materialButtonStyle">@style/Widget.Material3.FloatingToolbar.Button</item>
    <item name="borderlessButtonStyle">@style/Widget.Material3.FloatingToolbar.TextButton</item>
  </style>

  <!-- Theme overlay to be set on Vibrant Floating Toolbars. -->
  <style name="ThemeOverlay.Material3.FloatingToolbar.Vibrant">
    <item name="materialIconButtonStyle">@style/Widget.Material3.FloatingToolbar.IconButton.Vibrant</item>
    <item name="materialButtonStyle">@style/Widget.Material3.FloatingToolbar.Button.Vibrant</item>
    <item name="borderlessButtonStyle">@style/Widget.Material3.FloatingToolbar.TextButton.Vibrant</item>
  </style>

</resources>
